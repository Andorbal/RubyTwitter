!!! html
%html
  %head
    %title= title
    = csrf_meta_tag
    = render 'layouts/stylesheets'
  %body
    .container
      = render 'layouts/header'
      %section.round
        - flash.each do |key, value|
          = content_tag :div, value, class: "flash #{key}"
        = yield
      = render 'layouts/footer'
      = debug(params) if Rails.env.development?
