%h1 Edit user
- form_for(@user) do |f|
  = render 'shared/error_messages', object: f.object
  .field
    .label= f.label :name
    .input= f.text_field :name
  .field
    .label= f.label :email
    .input= f.text_field :email
  .field
    .label= f.label :password
    .input= f.password_field :password
  .field
    .label= f.label :password_confirmation, "Confirmation"
    .input= f.password_field :password_confirmation
  .actions= f.submit "Update"
%div
  = gravatar_for @user
  %a{ href: "http://gravatar.com/emails" } change
